<h1>Patient Details</h1>

<p>
  <strong>Health Identifier:</strong>
  <%= @patient.health_identifier %>
</p>

<p>
  <strong>Health Province:</strong>
  <%= @patient.health_province %>
</p>

<p>
  <strong>Email:</strong>
  <%= @patient.email %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @patient.phone_number %>
</p>

<p>
  <strong>Sex:</strong>
  <%= @patient.sex %>
</p>

<p>
  <strong>First Name:</strong>
  <%= @patient.first_name %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @patient.last_name %>
</p>

<p>
  <strong>Middle Name:</strong>
  <%= @patient.middle_name || 'N/A' %>
</p>

<p>
  <strong>Insurance Provider:</strong>
  <%= @patient.insurance_provider || 'N/A' %>
</p>

<p>
  <strong>Created At:</strong>
  <%= @patient.created_at.strftime('%B %d, %Y %I:%M %p') %>
</p>

<p>
  <strong>Updated At:</strong>
  <%= @patient.updated_at.strftime('%B %d, %Y %I:%M %p') %>
</p>

<%= link_to 'Back to Patients', patients_path %>
