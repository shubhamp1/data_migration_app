<!DOCTYPE html>
<html>
  <head>
    <title>DataMigrationApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, style: 'margin-right: 20px;' %>
      <%= link_to 'Upload CSV', patients_path, style: 'margin-right: 20px;' %>
      <%= link_to 'View Migration Histroy', migration_histories_path %>

    <% end %>
    <p class="notice"><%= notice %></p> 
    <p class="alert"><%= alert %></p> 
    <%= yield %>
  </body>
</html>
